<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer for the glow effect around the border -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#FF3200EE"/> <!-- Subtle glow (lighter, semi-transparent) -->
            <corners android:radius="15dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Main border layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke
                android:color="#FF6200EE"
                android:width="2dp"/> <!-- Border width -->
        </shape>
    </item>
</layer-list>
